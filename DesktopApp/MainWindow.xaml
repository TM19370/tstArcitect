<Window x:Class="DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        mc:Ignorable="d"
        Title="Вход" Height="300" Width="250">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <Label>Логин</Label>
            <TextBox Height="30" Name="loginTextBox"/>
            <Label>Пароль</Label>
            <PasswordBox Height="30" Name="passwordPasswordBox"/>
            <Button Click="EnterButton_Click" Height="30" Margin="0,5,0,0">Вход</Button>
        </StackPanel>
    </Grid>
</Window>
